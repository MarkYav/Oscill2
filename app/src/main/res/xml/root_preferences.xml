<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/appearance_header">

        <SwitchPreferenceCompat
            app:key="grid_used"
            app:title="@string/grid_title"
            app:defaultValue="true"/>

        <SeekBarPreference
            app:dependency="grid_used"
            app:key="grid_brightness"
            app:title="@string/brightness_of_grid_title"
            app:showSeekBarValue="true"
            app:defaultValue="50"
            />

        <SeekBarPreference
            app:key="ray_brightness"
            app:title="@string/brightness_of_ray_title"
            app:showSeekBarValue="true"
            app:defaultValue="50"
            />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/user_tools_header">

        <SwitchPreferenceCompat
            app:key="close_input"
            app:title="@string/close_input_title"
            app:summary="@string/close_input_summary"/>

        <SwitchPreferenceCompat
            app:dependency="close_input"
            app:key="auto_set"
            app:title="@string/auto_set_title"
            app:summary="@string/auto_set_summary"/>

    </PreferenceCategory>

</PreferenceScreen>